        <Frame x:Name="Page" Content="" HorizontalAlignment="Left" Height="332" Margin="34,84,0,0" VerticalAlignment="Top" Width="440" NavigationUIVisibility="Hidden"/>
        <Label x:Name="LbLampotilaMain" Content="Lämpötila:" HorizontalAlignment="Left" Height="37" Margin="687,84,0,0" VerticalAlignment="Top" Width="66" FontWeight="Bold"/>
